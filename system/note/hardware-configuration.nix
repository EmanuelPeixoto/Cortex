    { device = "/dev/disk/by-uuid/D64A-6BD1";
      fsType = "vfat";
      options = [ "fmask=0022" "dmask=0022" ];
    };

  swapDevices = [ {
    device = "/var/lib/swapfile";
    size = 1*1024;
    priority = 10;
